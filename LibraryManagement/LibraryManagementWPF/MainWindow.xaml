<Window x:Class="LibraryManagementWPF.MainWindow"        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementWPF"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="500" Width="798"
        MaxHeight="500" MaxWidth="798"
        MinHeight="500" MinWidth="798"
        FontSize="20"
        Background="#E6E6E0"
        FontFamily="pack://application:,,,/Fonts/#SF Pro Rounded"
        Name="mainWindow"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">
    
    
    <Window.Resources>
        <Storyboard x:Key="InvalidSignInTextBlockAnimation" Storyboard.TargetName="InvalidSignInTextBlock" Storyboard.TargetProperty="Opacity">
            <DoubleAnimation Duration="0:0:1.5"
                             From="0"
                             To="1"
                             AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="InvalidSignInInputAnimation">

            <ColorAnimation Storyboard.TargetName="SignInUserName" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="SignInPassword" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

        </Storyboard>
        <Storyboard x:Key="InvalidSignUpTextBlockAnimation" Storyboard.TargetName="InvalidSignUpTextBlock" Storyboard.TargetProperty="Opacity">
            <DoubleAnimation Duration="0:0:1.5"
                             From="0"
                             To="1"
                             AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="InvalidSignUpInputAnimation">

            <ColorAnimation Storyboard.TargetName="SignUpUserName" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                             Duration="0:0:1.5"
                             From="Transparent"
                             To="Red"
                             AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="SignUpPassword" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="SignUpEmail" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="SignUpRole" Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Gray"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

        </Storyboard>
        <Storyboard x:Key="RoundedMenuStoryboardAppear" Storyboard.TargetName="RoundedMenu">
            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TranslateTransform.Y)"
                             BeginTime="0:0:1"
                             From="80"
                             To="0"
                             Duration="0:0:0.75">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="MainPageAppear" Storyboard.TargetName="MainPage">
            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                             BeginTime="0:0:0.75"
                             From="1.5"
                             To="1"
                             Duration="0:0:1">
                <DoubleAnimation.EasingFunction>
                    <PowerEase Power="5" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>


            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                             BeginTime="0:0:0.75"
                             From="1.5"
                             To="1"
                             Duration="0:0:1">
                <DoubleAnimation.EasingFunction>
                    <PowerEase Power="5" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             BeginTime="0:0:0.75"
                             From="0"
                             To="1"
                             Duration="0:0:1">
                <DoubleAnimation.EasingFunction>
                    <PowerEase Power="5" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation Storyboard.TargetProperty="(Effect).(Radius)"
                             BeginTime="0:0:0.75"
                             From="20"
                             To="0"
                             Duration="0:0:1">
                <DoubleAnimation.EasingFunction>
                    <PowerEase Power="5" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>



        </Storyboard>
        <Storyboard x:Key="MainPageTextsAppear" Storyboard.TargetName="MainPageTexts">
            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleX)"
                             BeginTime="0:0:1.25"
                             From="1.4"
                             To="1"
                             Duration="0:0:1.25">
                <DoubleAnimation.EasingFunction>
                    <PowerEase Power="5" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>


            <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(ScaleTransform.ScaleY)"
                             BeginTime="0:0:1.25"
                             From="1.4"
                             To="1"
                             Duration="0:0:1.25">
                <DoubleAnimation.EasingFunction>
                    <PowerEase Power="5" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             BeginTime="0:0:1.25"
                             From="0"
                             To="1"
                             Duration="0:0:1.25">
                <DoubleAnimation.EasingFunction>
                    <PowerEase Power="5" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <DoubleAnimation Storyboard.TargetProperty="(Effect).(Radius)"
                             BeginTime="0:0:1.25"
                             From="20"
                             To="0"
                             Duration="0:0:1.25">
                <DoubleAnimation.EasingFunction>
                    <PowerEase Power="5" EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>



        </Storyboard>
        <Storyboard x:Key="InvalidBookInputAnimation">

            <ColorAnimation Storyboard.TargetName="TitleTextBox" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                    Duration="0:0:1.5"
                    From="Transparent"
                    To="Red"
                    AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="DescriptionTextBox" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                    Duration="0:0:1.5"
                    From="Transparent"
                    To="Red"
                    AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="AuthorTextBox" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="ISBNTextBox" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <DoubleAnimation Storyboard.TargetName="InvalidBookTextBlock"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:1.5"
                             From="0"
                             To="1"
                             AutoReverse="True">

                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </DoubleAnimation.EasingFunction>

            </DoubleAnimation>

        </Storyboard>
        <Storyboard x:Key="InvalidUserInputAnimation">

            <ColorAnimation Storyboard.TargetName="UsernameTextBox" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="PasswordTextBox" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="EmailTextBox" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="UserUpRole" Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <DoubleAnimation Storyboard.TargetName="InvalidUserTextBlock"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:1.5"
                             From="0"
                             To="1"
                             AutoReverse="True">

                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </DoubleAnimation.EasingFunction>

            </DoubleAnimation>

        </Storyboard>
        <Storyboard x:Key="InvalidLoanInputAnimation">

            <ColorAnimation Storyboard.TargetName="LoanBookIdTextBox" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="LoanUserIdTextBox" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <DoubleAnimation Storyboard.TargetName="InvalidLoanTextBlock"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:1.5"
                             From="0"
                             To="1"
                             AutoReverse="True">

                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </DoubleAnimation.EasingFunction>

            </DoubleAnimation>

        </Storyboard>
        <Storyboard x:Key="InvalidReviewInputAnimation">

            <ColorAnimation Storyboard.TargetName="ReviewUserIdTextBox" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="ReviewBookIdTextBox" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="ReviewRatingTextBox" Storyboard.TargetProperty="(Borderbrush).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <ColorAnimation Storyboard.TargetName="ReviewCommentTextBox" Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
                            Duration="0:0:1.5"
                            From="Transparent"
                            To="Red"
                            AutoReverse="True">
                <ColorAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </ColorAnimation.EasingFunction>
            </ColorAnimation>

            <DoubleAnimation Storyboard.TargetName="InvalidReviewTextBlock"
                             Storyboard.TargetProperty="Opacity"
                             Duration="0:0:1.5"
                             From="0"
                             To="1"
                             AutoReverse="True">

                <DoubleAnimation.EasingFunction>
                    <ExponentialEase Exponent="10"/>
                </DoubleAnimation.EasingFunction>

            </DoubleAnimation>

        </Storyboard>
    </Window.Resources>


    <Grid>
        <!-- Drag Move Border-->
        <Rectangle Height="12.5" HorizontalAlignment="Stretch" VerticalAlignment="Top" MouseDown="DragMoveBorder_MouseDown" Cursor="Hand" Fill="Transparent" Panel.ZIndex="4" Margin="0 0 100 0">
            
        </Rectangle>
        <!-- Window State Buttons -->
        <StackPanel Name="WindowStateButtons" Orientation="Horizontal" Panel.ZIndex="3" HorizontalAlignment="Right" VerticalAlignment="Top" MaxHeight="100">
            <Button SnapsToDevicePixels="True" Click="Button_Click" Style="{StaticResource MimimizeButtonStyle}">
                <Image RenderTransformOrigin="0.5 0.5" Source="Icons/icons8-minus-48.png" SnapsToDevicePixels="True" Width="20" Height="12.5" Stretch="Fill">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleY="1.1"/>
                    </Image.RenderTransform>
                </Image>
            </Button>
            <Button SnapsToDevicePixels="True" Name="CloseButton" Click="CloseButton_Click" Style="{StaticResource CloseButtonStyle}">
                <Image Source="Icons/icons8-close-48.png" SnapsToDevicePixels="True" Width="20" Height="20"/>
            </Button>
        </StackPanel>

        <!-- SignUpSignIn -->
        <Border Visibility="Visible" Background="{Binding ElementName=mainWindow, Path=Background}" Name="SignUpSignInBorder" Panel.ZIndex="1">
            <Border.Effect>
                <BlurEffect Radius="0"/>
            </Border.Effect>
            <Border.RenderTransform>
                <TranslateTransform>
                    <TranslateTransform.Y>
                        0
                    </TranslateTransform.Y>
                </TranslateTransform>
            </Border.RenderTransform>



            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <Border Visibility="Visible" x:Name="LogginFormBorder" Panel.ZIndex="2"  Style="{StaticResource SignInSignUpBorderStyle}" Padding="10">
                    <Grid>
                        <StackPanel Name="LoginBorderStackpanel1">
                            <TextBlock Name="HeaderLogginFormBorder" Text="Welcome to Our Cummunity!" Foreground="#E6E6E0" Margin="0 50 0 0" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18"/>
                            <TextBlock Name="BodyLogginFormBorder" TextWrapping="Wrap" Margin="20 20 20 0" Foreground="#E6E6E0" HorizontalAlignment="Center" FontSize="17">
                                Please log in to access your account and explore all the features we offer.
                                <LineBreak/>
                                <LineBreak/>
                                if you're new, feel free to sign up and join us!
                            </TextBlock>
                        </StackPanel>
                        <Button Style="{StaticResource LoginButtonStyle}" Content="Sign Up" Name="SignInSignUp" Click="SignInSignUp_Click"/>
                    </Grid>
                </Border>

                <Border Visibility="Visible" x:Name="SignInBorder" Grid.Column="1" Grid.ColumnSpan="2">
                    <Border.Effect>
                        <BlurEffect Radius="0"/>
                    </Border.Effect>
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Sign In to Library" HorizontalAlignment="Center" Margin="0 50 0 0" FontSize="30" Foreground="{StaticResource BlueLinearGradient}" FontWeight="Bold"/>
                            <local:MyFancyTextBox Margin="50 90 50 0" x:Name="SignInUserName" Borderbrush="Transparent" InformationTextBlock="Username"/>
                            <local:MyFancyTextBox Margin="50 10 50 0" x:Name="SignInPassword" InformationTextBlock="Password"/>
                            <TextBlock Opacity="0" Name="InvalidSignInTextBlock" Text="Username or Password is invalid Try Again!" Margin="50 10" TextAlignment="Center" Foreground="Red" FontSize="15"/>
                        </StackPanel>
                        <Button Name="SignInButton" Content="Sign In" Style="{StaticResource LoginButtonStyle}" BorderBrush="{StaticResource BlueLinearGradient}" Foreground="{StaticResource BlueLinearGradient}" Click="SignIn_Click">
                        </Button>
                    </Grid>
                </Border>

                <Border x:Name="SignUpBorder" Visibility="Collapsed" Grid.Column="0" Grid.ColumnSpan="2" >
                    <Border.Effect>
                        <BlurEffect Radius="0"/>
                    </Border.Effect>
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Sign Up to Library" HorizontalAlignment="Center" Margin="0 50 0 0" FontSize="30" Foreground="{StaticResource BlueLinearGradient}" FontWeight="Bold"/>
                            <local:MyFancyTextBox Margin="50 15 50 0" x:Name="SignUpUserName" InformationTextBlock="Username"/>
                            <local:MyFancyTextBox Margin="50 10 50 0" x:Name="SignUpPassword" InformationTextBlock="Password"/>
                            <local:MyFancyTextBox Margin="50 10 50 0" x:Name="SignUpEmail" InformationTextBlock="Email"/>
                            <StackPanel Margin="13 20 50 0">
                                <TextBlock Name="SignUpRole" Margin="50 0 0 5" FontSize="15" Text="Role" Foreground="Gray"/>
                                <RadioButton Margin="45 0 0 0" Name="AdminRadioButton" Content="Admin"/>
                                <RadioButton Margin="45 0 0 0" Name="MemberRadioButton" Content="Member"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Opacity="0" Name="InvalidSignUpTextBlock" Text="Fill All the Fields and Try Again!" Margin="50 30" VerticalAlignment="Bottom" TextAlignment="Center" Foreground="Red" FontSize="15"/>
                        <Button Content="Sign Up" Style="{StaticResource LoginButtonStyle}" BorderBrush="{StaticResource BlueLinearGradient}" Foreground="{StaticResource BlueLinearGradient}" Click="SignUp_Click"/>
                    </Grid>
                </Border>

            </Grid>
        </Border>

        <!-- Menu -->
        <Border Visibility="Collapsed" Panel.ZIndex="2" Name="RoundedMenu" Padding="5" Style="{StaticResource RoundedMenu}">

            <Border.RenderTransform>
                <TranslateTransform Y="80"/>
            </Border.RenderTransform>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Click="UsersButton_Click" Name="UsersButton" Style="{StaticResource RoundedButton}" Content="Users" Margin="7.5 0 7.5 0"/>
                <Button Click="BooksButton_Click" Name="BooksButton" Style="{StaticResource RoundedButton}" Content="Books" Margin="7.5 0 7.5 0"/>
                <Button Click="LoansButton_Click" Name="LoansButton" Style="{StaticResource RoundedButton}" Content="Loans" Margin="7.5 0 7.5 0"/>
                <Button Click="ReviewsButton_Click" Name="ReviewsButton" Style="{StaticResource RoundedButton}" Content="Reviews" Margin="7.5 0 7.5 0"/>
            </StackPanel>
        </Border>

        <!-- Main Page -->
        <Border Visibility="Collapsed" Opacity="0" RenderTransformOrigin="0.5 0.5" Name="MainPage">

            <Border.Effect>
                <BlurEffect Radius="0"></BlurEffect>
            </Border.Effect>

            <Border.RenderTransform>
                <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
            </Border.RenderTransform>

            <Grid>
                <Image Panel.ZIndex="-1" Source="Images/blue-book-headphones-arrangement.jpg" Stretch="UniformToFill"/>
                <Border RenderTransformOrigin="0.280 0.5" Opacity="0" Name="MainPageTexts" Background="Transparent" BorderThickness="0">

                    <Border.Effect>
                        <BlurEffect Radius="0"></BlurEffect>
                    </Border.Effect>

                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="1.4" ScaleY="1.4"/>
                    </Border.RenderTransform>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.9*"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">

                            <TextBlock Foreground="#0A5F83" FontSize="35" FontWeight="Bold" TextAlignment="Center">
                                Book is your bicycle<LineBreak/>at any where, any time
                            </TextBlock>

                            <TextBlock Margin="30 15" TextWrapping="Wrap" Foreground="#0A5F83" FontSize="25"  TextAlignment="Center">
                                Explore our extensive collection of Books, Users, Reviews, Loans and maybe more!
                            </TextBlock>

                        </StackPanel>


                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- books page-->
        <Border Visibility="Collapsed" Background="{Binding ElementName=mainWindow, Path=Background}" RenderTransformOrigin="0.5 0.5" Name="BooksPage">

            <Border.RenderTransform>
                <TranslateTransform Y="0"/>
            </Border.RenderTransform>

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Books" Foreground="#0A5F83" FontWeight="Bold" FontSize="35" Margin="25 25 0 0"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 20 0 80">
                    <TextBlock Opacity="0" Name="InvalidBookTextBlock" Text="Information Invalid Try Again!" Margin="25 0" TextAlignment="Center" Foreground="Red" FontSize="15"/>
                    <local:MyFancyTextBox x:Name="TitleTextBox" InformationTextBlock="Title" Margin="25 10 25 0"/>
                    <local:MyFancyTextBox x:Name="DescriptionTextBox" InformationTextBlock="Description" Margin="25 10 25 0"/>
                    <local:MyFancyTextBox x:Name="AuthorTextBox" InformationTextBlock="Author" Margin="25 10 25 0"/>
                    <local:MyFancyTextBox x:Name="ISBNTextBox" InformationTextBlock="ISBN" Margin="25 10 25 10"/>

                    <Button HorizontalAlignment="Center" x:Name="AddBookButton" Style="{StaticResource RoundedButtonNormal}" Height="50" Content="Add Book" Margin="0 0 0 0" VerticalAlignment="Bottom" Click="AddBookButton_Click"/>
                </StackPanel>


                <ScrollViewer BorderThickness="0" Margin="25 108 50 200" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Column="1">
                    <ListView SelectionMode="Single" BorderThickness="0" FontSize="15" Foreground="{StaticResource BlueLinearGradient}" Grid.Column="1" x:Name="BooksListView" Background="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" Header="ID" DisplayMemberBinding="{Binding BookId}"/>
                                <GridViewColumn Width="Auto" Header="Title" DisplayMemberBinding="{Binding Title}"/>
                                <GridViewColumn Width="Auto" Header="Description" DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Width="Auto" Header="Author" DisplayMemberBinding="{Binding Author}"/>
                                <GridViewColumn Width="Auto" Header="ISBN" DisplayMemberBinding="{Binding ISBN}"/>
                                <GridViewColumn Width="Auto" Header="Added Date" DisplayMemberBinding="{Binding PublishedDate}"/>
                                <GridViewColumn Width="Auto" Header="Count" DisplayMemberBinding="{Binding CopiesAvailable}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>

                <Button Grid.Column="1" HorizontalAlignment="Center" x:Name="DeleteBookButton" Style="{StaticResource RoundedButtonNormal}" Height="50" Content="Delete Book" Margin="0 0 0 137.3" VerticalAlignment="Bottom" Click="DeleteBookButton_Click"/>

            </Grid>


        </Border>

        <!-- Users page-->
        <Border Visibility="Collapsed" Background="{Binding ElementName=mainWindow, Path=Background}" RenderTransformOrigin="0.5 0.5" Name="UsersPage">

            <Border.RenderTransform>
                <TranslateTransform Y="0"/>
            </Border.RenderTransform>

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Users" Foreground="#0A5F83" FontWeight="Bold" FontSize="35" Margin="25 25 0 0"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 30 0 80">
                    <TextBlock Opacity="0" Name="InvalidUserTextBlock" Text="Information Invalid Try Again!" Margin="25 25 0 0" TextAlignment="Center" Foreground="Red" FontSize="15"/>
                    <local:MyFancyTextBox x:Name="UsernameTextBox" InformationTextBlock="Username" Margin="25 10 25 0"/>
                    <local:MyFancyTextBox x:Name="PasswordTextBox" InformationTextBlock="Password" Margin="25 10 25 0"/>
                    <local:MyFancyTextBox x:Name="EmailTextBox" InformationTextBlock="Email" Margin="25 10 25 0"/>
                    <StackPanel Margin="0 20 0 0">
                        <TextBlock Name="UserUpRole" Margin="30 0 0 5" FontSize="15" Text="Role" Foreground="Gray"/>
                        <RadioButton Margin="25 0 0 0" Name="UserAdminRadioButton" Content="Admin"/>
                        <RadioButton Margin="25 0 0 0" Name="UserMemberRadioButton" Content="Member"/>
                    </StackPanel>

                    <Button HorizontalAlignment="Center" x:Name="AddUserButton" Style="{StaticResource RoundedButtonNormal}" Height="50" Content="Add User" Margin="0 10 0 0" VerticalAlignment="Bottom" Click="AddUserButton_Click"/>
                </StackPanel>


                <ScrollViewer BorderThickness="0" Margin="25 98 50 150" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Column="1">
                    <ListView SelectionMode="Single" BorderThickness="0" FontSize="15" Foreground="{StaticResource BlueLinearGradient}" Grid.Column="1" x:Name="UsersListView" Background="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" Header="ID" DisplayMemberBinding="{Binding UserId}"/>
                                <GridViewColumn Width="Auto" Header="Username" DisplayMemberBinding="{Binding Username}"/>
                                <GridViewColumn Width="Auto" Header="PasswordHash" DisplayMemberBinding="{Binding PasswordHash}"/>
                                <GridViewColumn Width="Auto" Header="Email" DisplayMemberBinding="{Binding Email}"/>
                                <GridViewColumn Width="Auto" Header="Role" DisplayMemberBinding="{Binding Role}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>

                <Button Grid.Column="1" HorizontalAlignment="Center" x:Name="DeleteUserButton" Style="{StaticResource RoundedButtonNormal}" Height="50" Content="Delete User" Margin="0 0 0 94.25" VerticalAlignment="Bottom" Click="DeleteUserButton_Click"/>

            </Grid>


        </Border>

        <!-- LoansPage -->
        <Border Visibility="Collapsed" Background="{Binding ElementName=mainWindow, Path=Background}" RenderTransformOrigin="0.5 0.5" Name="LoanssPage">

            <Border.RenderTransform>
                <TranslateTransform Y="0"/>
            </Border.RenderTransform>

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Loans" Foreground="#0A5F83" FontWeight="Bold" FontSize="35" Margin="25 25 0 0"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 20 0 240">
                    <TextBlock Opacity="0" Name="InvalidLoanTextBlock" Text="Information Invalid Try Again!" Margin="25 0" TextAlignment="Center" Foreground="Red" FontSize="15"/>
                    <local:MyFancyTextBox x:Name="LoanBookIdTextBox" InformationTextBlock="Book ID" Margin="25 10 25 0"/>
                    <local:MyFancyTextBox x:Name="LoanUserIdTextBox" InformationTextBlock="User ID" Margin="25 10 25 0"/>
                </StackPanel>
                <Button HorizontalAlignment="Center" x:Name="AddLoanButton" Style="{StaticResource RoundedButtonNormal}" Height="50" Content="Add Loan" Margin="0 0 0 137.3" VerticalAlignment="Bottom" Click="AddLoanButton_Click"/>


                <ScrollViewer BorderThickness="0" Margin="25 108 50 200" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Column="1">
                    <ListView SelectionMode="Single" BorderThickness="0" FontSize="15" Foreground="{StaticResource BlueLinearGradient}" Grid.Column="1" x:Name="LoansListView" Background="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" Header="Loan ID" DisplayMemberBinding="{Binding LoanId}"/>
                                <GridViewColumn Width="Auto" Header="User ID" DisplayMemberBinding="{Binding UserId}"/>
                                <GridViewColumn Width="Auto" Header="Book ID" DisplayMemberBinding="{Binding BookId}"/>
                                <GridViewColumn Width="Auto" Header="Loan Date" DisplayMemberBinding="{Binding LoanDate}"/>
                                <GridViewColumn Width="Auto" Header="Return Date" DisplayMemberBinding="{Binding ReturnDate}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>

                <Button Grid.Column="1" HorizontalAlignment="Center" x:Name="LoanDeleteButton" Style="{StaticResource RoundedButtonNormal}" Height="50" Content="Delete Loan" Margin="0 0 0 137.3" VerticalAlignment="Bottom" Click="LoanDeleteButton_Click"/>

                <Button Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" x:Name="LoanReturnedButton" Style="{StaticResource RoundedButtonNormal}" Height="50" Content="Returned" Margin="0 0 0 137.3" VerticalAlignment="Bottom" Click="LoanReturnedButton_Click"/>

            </Grid>


        </Border>

        <!--Reviews Page-->
        <Border Visibility="Collapsed" Background="{Binding ElementName=mainWindow, Path=Background}" RenderTransformOrigin="0.5 0.5" Name="ReviewsPage">

            <Border.RenderTransform>
                <TranslateTransform Y="0"/>
            </Border.RenderTransform>

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Reviews" Foreground="#0A5F83" FontWeight="Bold" FontSize="35" Margin="25 25 0 0"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 20 0 80">
                    <TextBlock TextWrapping="Wrap" Opacity="0" Name="InvalidReviewTextBlock" Text="Information Invalid Try Again!" Margin="25 0" TextAlignment="Center" Foreground="Red" FontSize="15"/>
                    <local:MyFancyTextBox x:Name="ReviewUserIdTextBox" InformationTextBlock="User ID" Margin="25 10 25 0"/>
                    <local:MyFancyTextBox x:Name="ReviewBookIdTextBox" InformationTextBlock="Book ID" Margin="25 10 25 0"/>
                    <local:MyFancyTextBox x:Name="ReviewRatingTextBox" InformationTextBlock="Rating" Margin="25 10 25 0"/>
                    <local:MyFancyTextBox x:Name="ReviewCommentTextBox" InformationTextBlock="Comment" Margin="25 10 25 10"/>

                    <Button HorizontalAlignment="Center" x:Name="AddReviewButton" Style="{StaticResource RoundedButtonNormal}" Height="50" Content="Submit Review" Margin="0 0 0 0" VerticalAlignment="Bottom" Click="AddReviewButton_Click"/>
                </StackPanel>


                <ScrollViewer BorderThickness="0" Margin="25 108 50 200" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Column="1">
                    <ListView SelectionMode="Single" BorderThickness="0" FontSize="15" Foreground="{StaticResource BlueLinearGradient}" Grid.Column="1" x:Name="ReviewsListView" Background="Transparent">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" Header="Review ID" DisplayMemberBinding="{Binding ReviewId}"/>
                                <GridViewColumn Width="Auto" Header="User ID" DisplayMemberBinding="{Binding UserId}"/>
                                <GridViewColumn Width="Auto" Header="Book ID" DisplayMemberBinding="{Binding BookId}"/>
                                <GridViewColumn Width="Auto" Header="Rating" DisplayMemberBinding="{Binding Rating}"/>
                                <GridViewColumn Width="Auto" Header="Comment" DisplayMemberBinding="{Binding Comment}"/>
                                <GridViewColumn Width="Auto" Header="Review Date" DisplayMemberBinding="{Binding ReviewDate}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </ScrollViewer>

                <Button Grid.Column="1" HorizontalAlignment="Center" x:Name="DeleteReviewButton" Style="{StaticResource RoundedButtonNormal}" Height="50" Content="Delete Review" Margin="0 0 0 137.3" VerticalAlignment="Bottom" Click="DeleteReviewButton_Click"/>

            </Grid>


        </Border>
    </Grid>
    
</Window>
