<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="LogginButton" TargetType="Button">
        <Border HorizontalAlignment="{TemplateBinding HorizontalAlignment}" RenderTransformOrigin="0.5 0.5" SnapsToDevicePixels="True" VerticalAlignment="{TemplateBinding VerticalAlignment}" CornerRadius="32.5" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
            
            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            </ContentPresenter>
        </Border>

    </ControlTemplate>

    <Style x:Key="LoginButtonStyle" TargetType="Button">
        <Setter Property="Template" Value="{StaticResource LogginButton}"/>
        <Setter Property="Width" Value="175"/>
        <Setter Property="Height" Value="65"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#E6E6E0"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="BorderBrush" Value="#E6E6E0"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0 0 0 75"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="RenderTransformOrigin" Value="0.5 0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <BlurEffect Radius="0"/>
            </Setter.Value>
        </Setter>

        <Style.Triggers>

            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Duration="0:0:0.5"
                                             By="0.15"
                                             Storyboard.TargetProperty="RenderTransform.ScaleX">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Duration="0:0:0.5"
                                             By="0.15"
                                             Storyboard.TargetProperty="RenderTransform.ScaleY">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Duration="0:0:0.5"
                                             To="1"
                                             Storyboard.TargetProperty="RenderTransform.ScaleX">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Duration="0:0:0.5"
                                             To="1"
                                             Storyboard.TargetProperty="RenderTransform.ScaleY">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Storyboard x:Key="SignInSignUpWidthAnimation" Storyboard.TargetName="SignInSignUp">
        <DoubleAnimation Storyboard.TargetProperty="Width"
                         Duration="0:0:0.75"
                         To="225"
                         AutoReverse="True">
            <DoubleAnimation.EasingFunction>
                <PowerEase Power="5" EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <Storyboard x:Key="PopUpButtonAnimation">
        
                            <DoubleAnimation Duration="0:0:0.5"
                                      To="1.15"
                                      Storyboard.TargetProperty="RenderTransform.ScaleX">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Duration="0:0:0.5"
                                      To="1.15"
                                      Storyboard.TargetProperty="RenderTransform.ScaleY">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                   
                            <DoubleAnimation Duration="0:0:0.5"
                                      To="1"
                                      Storyboard.TargetProperty="RenderTransform.ScaleX">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation Duration="0:0:0.5"
                                      To="1"
                                      Storyboard.TargetProperty="RenderTransform.ScaleY">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase Amplitude="1" EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                    
    </Storyboard>

</ResourceDictionary>