<UserControl x:Class="LibraryManagementWPF.MyFancyTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManagementWPF"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400"
             x:Name="FancyTextBoxControl">
    <UserControl.Resources>
        
        <Storyboard Storyboard.TargetName="InformationText" x:Key="InformationTextBoxAnimationToUnvisible">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             Duration="0:0:0.25"
                             To="0"
                             FillBehavior="HoldEnd"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                Duration="0:0:0.25"
                                To="0 10 10 10"
                                FillBehavior="HoldEnd"/>
            
        </Storyboard>

        <Storyboard Storyboard.TargetName="InformationText" x:Key="InformationTextBoxAnimationToVisible">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             Duration="0:0:0.25"
                             To="1"
                             FillBehavior="HoldEnd"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                Duration="0:0:0.25"
                                To="10 10 10 10"
                                FillBehavior="HoldEnd"/>

        </Storyboard>

        <Storyboard x:Key="TextBoxGotFocus">
            <ColorAnimation Storyboard.TargetName="InnerTextBox"
                Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
                To="#0083B0"
                FillBehavior="HoldEnd"
                Duration="0:0:0.25"/>
        </Storyboard>

        <Storyboard x:Key="TextBoxLostFocus">
            <ColorAnimation Storyboard.TargetName="InnerTextBox"
                Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
                To="Gray"
                FillBehavior="HoldEnd"
                Duration="0:0:0.25"/>
        </Storyboard>

    </UserControl.Resources>

    <Border Background="#D1D1CC" CornerRadius="7.5"  BorderThickness="2" BorderBrush="{Binding Borderbrush, ElementName=FancyTextBoxControl}">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="10" x:Name="InformationText" FontSize="15" Foreground="Gray" Background="Transparent" Opacity="{Binding InformationTextOpacity, ElementName=FancyTextBoxControl}" Text="{Binding InformationTextBlock, ElementName=FancyTextBoxControl,Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox GotFocus="InnerTextBox_GotFocus" LostFocus="InnerTextBox_LostFocus" x:Name="InnerTextBox" FontSize="20" Foreground="#0083B0" Background="Transparent" BorderThickness="0" Text="{Binding InnerText, ElementName=FancyTextBoxControl,Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="400" Height="30"/>
        </Grid>
    </Border>
    

</UserControl>
